    <!-- explicit list view definition MODEL DEBE SER IGUAL AL _NAME DEL MODULO-->

    <record model="ir.ui.view" id="modulo1_modelo_tree">
      <field name="name">Vista arbol del modelo</field>
      <field name="model">modulo1.modulo</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="value"/> 
        </tree>
      </field>
    </record>

    <!-- actions opening views on models RES_MODEL DEBE SER IGUAL AL _NAME DEL MODULO-->
    <record model="ir.actions.act_window" id="modulo1_modulo_action_window">
      <field name="name">Accion de ventana para modulo1.modulo</field>
      <field name="res_model">modulo1.modulo</field>
      <field name="view_mode">tree,form</field>
    </record>

